Public Sub Form_Open()

    Dim i As Byte

    With grvFields
        .Columns.Count = 2
        .Rows.Count = 5
        For i = 0 To 1
            .Columns[i].Alignment = Align.Center
        Next
        .Columns[0].Width = 125
        .Height = .Rows.Height * 5 + 2
    End With
    grvFields[0, 0].Text = ("MAC address")
    grvFields[1, 0].Text = ("Time")
    grvFields[2, 0].Text = ("Quantity")
    grvFields[3, 0].Text = "VLAN"
    grvFields[4, 0].Text = ("Area")

End

Public Sub tmrPopup_Timer()

    tmrPopup.Stop()
    Me.Close()

End

Public Sub Form_Show()

    Me.Left = Screen.W - Me.W - 15
    Me.Top = 15
    DataUpdate()

End


Public Sub DataUpdate()

    grvFields[0, 1].Text = FMain.grvFields[0, 1].Text
    grvFields[1, 1].Text = FMain.grvFields[1, 1].Text
    grvFields[2, 1].Text = FMain.grvFields[2, 1].Text
    grvFields[3, 1].Text = FMain.grvFields[3, 1].Text
    grvFields[4, 1].Text = FMain.grvFields[4, 1].Text

End
